<h1>Books</h1>
<table>
  <thead>
    <tr><strong>Title</strong></tr>
    <tr><strong>Body</strong></tr>
  </thead>
  <tbody>
    <% @indexes.each do |book| %>
      <tr><span><%= book.title %></span></tr>

      <tr><span><%= book.body %></span></tr>
      <tr><%= link_to "Show",book_path(book.id),method: :get %></tr>
      <tr><%= link_to "Edit",edit_book_path(book.id),method: :get %></tr>
      <tr><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @books,url: '/books',method: :post do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="button">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>